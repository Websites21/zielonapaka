generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  username     String
  email        String    @unique
  passwordHash String
  sessions     Session[]
}

model Session {
  id        String   @id @default(uuid()) @map("_id")
  user      User     @relation(fields: [userID], references: [id], onDelete: Cascade)
  userID    String   @db.ObjectId
  expiresAt DateTime
}

model Product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String @unique
  price       Int
  description String
  imageURL    String
}
